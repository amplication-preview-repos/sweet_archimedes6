datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  authorName    String?
  comments      Comment[]
  content       String?
  createdAt     DateTime  @default(now())
  id            String    @id @default(cuid())
  publishedDate DateTime?
  title         String?
  updatedAt     DateTime  @updatedAt
}

model Comment {
  authorName  String?
  content     String?
  createdAt   DateTime  @default(now())
  createdDate DateTime?
  id          String    @id @default(cuid())
  post        Post?     @relation(fields: [postId], references: [id])
  postId      String?
  updatedAt   DateTime  @updatedAt
}
